<Window x:Class="Lab1Pt2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1Pt2"
        mc:Ignorable="d" Background="OrangeRed" Icon="pack://application:,,,/Resources/circustent.png"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Start Date:" Grid.Column="0" Grid.Row="0"/>
        <DatePicker Name="Date1" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right"/>
        <TextBlock Text="End Date:" Grid.Column="0" Grid.Row="1"/>
        <DatePicker Name="Date2" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right"/>
        
        <Button Name="BtnCalc" Content="Calculate" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" HorizontalAlignment="Center" Click="BtnCalc_OnClick"/>
    </Grid>
</Window>
